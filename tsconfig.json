{
    "compilerOptions": {
      "jsx": "react",
      "lib": ["es6", "dom"],
      "rootDir": "src",
      "module": "ES2022",
      "target": "es2017",
      "sourceMap": true,
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,      
    },
    "include": [
      "./src"
    ],
    "exclude": [
      "node_modules",
      "build"
    ]
    
    
  }